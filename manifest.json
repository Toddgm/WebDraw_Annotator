{
  "manifest_version": 3,
  "name": "WebDraw Annotator",
  "version": "1.0",
  "description": "Draw, highlight, and add text callouts directly on web pages.",
  "permissions": [
    "activeTab", // Access the currently active tab
    "scripting", // Inject scripts into the page
    "storage"   // Save annotations locally
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Activate WebDraw"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"], // Run on all websites initially
      "js": ["content_loader.js"] // A small script to listen for activation messages
    }
  ],
   "web_accessible_resources": [
    {
      "resources": ["content.js", "content.css", "fonts/*"], // Make these injectable
      "matches": ["<all_urls>"]
    }
  ]
}